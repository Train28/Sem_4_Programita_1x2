@model Sem_4_Programita_1x2.Models.Factura
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <title>Registrar Factura</title>
</head>
<body>
    <div class="container">
        <form asp-controller="Home" asp-action="Calculo">
            <label>Cliente</label>
            <input asp-for="cliente" class="form-control"/><br/>
            <label>Producto</label>
            <select asp-for="producto" class="form-control">
                <option value="P1">Producto 1</option>
                <option value="P2">Producto 2</option>
                <option value="P3">Producto 3</option>
            </select><br/>
            <label>Cantidad</label>
            <input asp-for="cantidad" value="1" min="1" type="number" class="form-control"/><br/>
            <label>Fecha</label>
            <input asp-for="fecha" value="2019-01-01" class="form-control"/><br/><br/>
            <input type="submit" class="btn btn-primary" value="Registrar"/>
        </form>
    </div>
</body>
</html>